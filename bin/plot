#!/usr/bin/env python3

import os
import sys
import argparse

bin_dir = os.path.join(os.path.dirname(__file__), "..")
sys.path.append(os.path.realpath(bin_dir))

import src.plot as plot

parser = argparse.ArgumentParser(
    prog="bin/plot", description="Plot computed xpehh values",
)

parser.add_argument("xpehh_dir")
parser.add_argument("--begin", type=int, required=True)
parser.add_argument("--end", type=int, required=True)
parser.add_argument("--cmap", default=None)
parser.add_argument("--title", default=None)

args = parser.parse_args()

plot.plot(
    args.xpehh_dir, begin=args.begin, end=args.end, title=args.title, cmap=args.cmap
)
